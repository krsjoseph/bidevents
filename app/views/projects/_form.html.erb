<div class="container">
</div>

<%= simple_form_for(@project) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%# f.input :type %>
      <%= f.input :name %>
      <%# f.input :short_description %>
      <%= f.input :people, :label => "Amount Of People" %>
      <%= f.input :things_required, collection: Thing.all,
                  :input_html => {:class => "chzn-select", multiple: true  },
                  value_method: :name,
                  :label => "Services Needed"%>
      <%= f.input :long_description, as: :text, :label => "Description"  %>

      <%= f.input :budget %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-success", :value => "Create Event" %>
    </div>
<% end %>